{
    "name": "stevancorre-com",
    "version": "1.0.0",
    "description": "My personal website",
    "main": "dist/app.js",
    "scripts": {
        "lint": "eslint src/**/*.ts && stylelint src/**/*.scss",
        "lint:fix": "eslint src/**/*.ts --fix && stylelint src/**/*.scss --fix",
        "watch-ts": "tsup --watch",
        "watch-scss": "sass src:dist --watch --style=compressed",
        "watch-http": "es-dev-server --app-index dist/index.html --node-resolve --watch --open",
        "start:dev": "yarn build && concurrently --kill-others 'npm:watch-*'",
        "build": "yarn lint && rimraf dist && tsup && sass src:dist --style=compressed && cp public/* dist"
    },
    "repository": "https://github.com/stevancorre/com.git",
    "author": {
        "name": "St√©van Corre",
        "email": "me@stevancorre.com",
        "url": "https://stevancorre.com"
    },
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "concurrently": "^7.2.1",
        "es-dev-server": "^2.1.0",
        "eslint": "^8.17.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "sass": "^1.52.2",
        "stylelint": "^14.8.5",
        "stylelint-config-prettier": "^9.0.3",
        "stylelint-config-standard-scss": "^4.0.0",
        "stylelint-prettier": "^2.0.0",
        "tsup": "^6.0.1",
        "typescript": "^4.7.3"
    }
}